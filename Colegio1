    <script>
        // BASE DE DATOS LOCAL
        const alumnos = {
            "001": { n: "JUAN PEREZ", g: "5TO", s: "B" },
            "002": { n: "MARIA LOPEZ", g: "4TO", s: "A" },
            "135": { n: "RICARDO SOSA", g: "6TO", s: "C" }
            // Solo agrega los 135 aquí siguiendo el mismo formato
        };

        const params = new URLSearchParams(window.location.search);
        const id = params.get('id');
        const info = alumnos[id];

        if (info) {
            document.getElementById('nombre').innerText = info.n;
            document.getElementById('grado').innerText = info.g;
            document.getElementById('seccion').innerText = info.s;
        } else {
            document.getElementById('nombre').innerText = "No encontrado";
        }
    </script>
